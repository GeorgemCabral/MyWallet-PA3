        <ListView
            android:id="@+id/lv_history_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bgMainGrey"
            android:scrollbars="vertical"
            android:footerDividersEnabled="true"

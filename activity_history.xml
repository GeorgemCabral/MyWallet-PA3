        </ListView>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_admob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout

    android:layout_height="match_parent"
    tools:context="Diretory.dev.mywallet.MainActivity"
    android:id="@+id/r_layout_history_money">

    <LinearLayout
        android:layout_above="@+id/cardview_admob"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <ImageView
                    android:id="@+id/btnBackArrow"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:tint="@color/blue_icon_list"
                    android:gravity="start"
                    android:layout_gravity="center_vertical"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"/>
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_event_note_black_24dp"
                        android:tint="@color/blue_icon_list" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="History"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_icon_list" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search_black_24dp"
                    android:tint="@color/blue_icon_list"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:textColor="@color/grey_icon_setting"
                    android:text="Filter"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/income_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_circle_black_24dp"
                        android:tint="@color/green_icon_income"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/income_button_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/expense_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_remove_circle_black_24dp"
                        android:tint="@color/red_icon_expense"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/expense_button_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/sorting_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_sort_black_24dp"
                        android:tint="@color/grey_icon_setting"
                        android:scaleY="1"/>
                    <TextView
                        android:id="@+id/sorting_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <Spinner
                    android:id="@+id/spinner_filter_month_history"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:dropDownWidth="wrap_content">
                </Spinner>
                <Spinner
                    android:id="@+id/spinner_filter_year_history"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/spinner_filter_month_history"
                    android:dropDownWidth="wrap_content">
                </Spinner>
                <Spinner
                    android:id="@+id/spinner_filter_category_history"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:dropDownWidth="wrap_content"
                    android:spinnerMode="dialog"
                    android:background="@android:color/transparent">
                </Spinner>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

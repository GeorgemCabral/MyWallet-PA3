<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/r_layout_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Diretory.dev.mywallet.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgMainGrey">
        <android.support.v7.widget.CardView
            android:id="@+id/title_main"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:background="@android:color/white">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_account_balance_wallet_black_24dp"
                        android:tint="@color/colorPrimary" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MyWallet"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/setting_btn_cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_settings_black_24dp"
                    android:tint="@color/colorPrimary" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/balanceView"
            android:layout_below="@+id/title_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@color/bgMainGreySoft"
                    android:paddingVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/title_balance"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Balance"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/value_balance"
                        android:layout_below="@+id/title_balance"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="900.000"
                        android:textSize="40sp"
                        android:textAllCaps="true"
                        android:textColor="@color/grey_icon_setting"/>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:id="@id/button_bottom"
            android:layout_below="@id/balanceView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:id="@+id/add_income_btn_cardview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="0.5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_add_circle_black_24dp"
                        android:tint="@color/green_icon_income"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/view_history_btn_cardview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="0.5dp"
                android:layout_marginLeft="0.5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_event_note_black_24dp"
                        android:tint="@color/blue_icon_list"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="History"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/add_expense_btn_cardview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="0.5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_remove_circle_black_24dp"
                        android:tint="@color/red_icon_expense"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Use"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button_bottom2"
            android:layout_below="@id/button_bottom"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">
            <android.support.v7.widget.CardView
                android:id="@+id/view_budget_btn_cardview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="0.5dp"
                android:layout_marginLeft="0.5dp"
                android:background="?android:attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_insert_emoticon_black_24dp"
                        android:tint="@color/orange_icon_budget"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Budget"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/view_report_btn_cardview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="0.5dp"
                android:layout_marginLeft="0.5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_donut_small_black_24dp"
                        android:tint="@color/purple_icon_report"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Report"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="0.5dp">
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:id="@+id/title_daily"
            android:layout_below="@id/button_bottom2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/bgMainGreySoft">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/left_arrow_btn_annual"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                        android:tint="@color/grey_icon_setting"
                        android:layout_alignParentLeft="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/sTanggal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jumat, 27 April 2018"
                            android:textSize="18sp"
                            android:textStyle="bold|italic"
                            android:textColor="@color/grey_icon_setting" />
                        <TextView
                            android:id="@+id/sToday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" (Today)"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/orange_icon_budget"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/right_arrow_btn_annual"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:layout_alignParentRight="true"
                        android:tint="@color/grey_icon_setting"/>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <ListView
            android:id="@+id/todayList"
            android:layout_below="@id/title_daily"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>
    </RelativeLayout>
</RelativeLayout>
